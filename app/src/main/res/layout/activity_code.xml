<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_wihte_frame">
            <EditText
                android:id="@+id/query_code"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:hint="请输入违章代码" />
            <Button
                android:id="@+id/btn_code_query"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/query"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="违章代码"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/colorAccent"/>

            <!--代码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代码:"
                    android:textSize="20dp" />
                <EditText
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_code"/>
            </LinearLayout>

            <!--扣分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扣分:"
                    android:textSize="20dp" />
                <EditText
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_code_score"/>
            </LinearLayout>

            <!--处罚-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处罚:"
                    android:textSize="20dp" />
                <EditText
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_done"/>
            </LinearLayout>

            <!--违章行为-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="违章行为:"
                    android:textSize="20dp" />
                <EditText
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_violation"/>
            </LinearLayout>

            <!--依据-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="依据:"
                    android:textSize="20dp" />
                <EditText
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_law"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="了解"
                android:background="@drawable/button_bg"
                android:textColor="@color/color_white"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>